@Repository
public interface ItemRedisRepository {
    // Salva um novo item no Redis
    void criar(ItemRedisEntity itemRedisEntity);

    // Obtém um item do Redis pelo id
    ItemRedisEntity obter(Integer id);

    // Atualiza um item existente no Redis
    void atualizar(ItemRedisEntity itemRedisEntity);

    // Pesquisa itens usando um filtro
    Page<ItemRedisEntity> findAll(Pageable pageable);

    // Exclui um item pelo id
    void deleteById(Integer id);

    // Ativa um item específico
    Optional<ItemRedisEntity> findById(Integer id);

    void save(ItemRedisEntity itemRedisEntity);
}
