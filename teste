# 1) Tenta um bundle com v1 + v1beta1 (ex. 0.9.16)
kubectl apply -f https://raw.githubusercontent.com/external-secrets/external-secrets/v0.9.16/deploy/crds/bundle.yaml

# confira se agora o v1beta1 estÃ¡ served
kubectl get crd externalsecrets.external-secrets.io -o=jsonpath='{range .spec.versions[*]}{.name}={.served}{"\n"}{end}'
# esperado: ... v1beta1=true ...

# idem p/ SecretStore
kubectl get crd secretstores.external-secrets.io -o=jsonpath='{range .spec.versions[*]}{.name}={.served}{"\n"}{end}'

