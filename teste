import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.Path;
import java.util.List;
import java.util.stream.Collectors;

public class PackageUpdater {

    public static List<String> updatePackageInFileContent(Path sourceFile, String oldGroupId, String newGroupId) throws IOException {
        List<String> lines = Files.readAllLines(sourceFile);
        return lines.stream()
            .map(line -> {
                if (line.trim().startsWith("package " + oldGroupId)) {
                    return line.replace("package " + oldGroupId, "package " + newGroupId);
                } else {
                    return line.replace(oldGroupId + ".", newGroupId + ".");
                }
            })
            .collect(Collectors.toList());
    }
}
