helm repo add external-secrets https://charts.external-secrets.io
helm repo update
helm upgrade --install external-secrets external-secrets/external-secrets \
  -n external-secrets --create-namespace


kubectl get crd | grep external-secrets
# deve listar: externalsecrets.external-secrets.io, secretstores.external-secrets.io, clustersecretstores.external-secrets.io


kubectl -n ms-edi-pix create secret generic envs --from-literal=DUMMY=1 --dry-run=client -o yaml | kubectl apply -f -
kubectl -n ms-edi-pix create secret generic envs-secrets --from-literal=DUMMY=1 --dry-run=client -o yaml | kubectl apply -f -


helm upgrade --install ms-edi-pix . -f values.qa.yaml --namespace ms-edi-pix


kubectl -n ms-edi-pix get rollouts,pods
