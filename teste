private void copyFilesFromResource(ClassPathResource resource, Path targetPath) throws IOException {
        // Cria o diretório se ele não existir
        if (!Files.exists(targetPath)) {
            Files.createDirectories(targetPath);
        }

        // Copiar o conteúdo do recurso (no JAR) para o sistema de arquivos
        try (InputStream inputStream = resource.getInputStream()) {
            Path targetFile = targetPath.resolve("template-files");
            Files.copy(inputStream, targetFile, StandardCopyOption.REPLACE_EXISTING);
            logger.info("Arquivo copiado para {}", targetFile);
        }
    }
