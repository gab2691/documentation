# remova o taint do control-plane (Kind moderno)
kubectl taint nodes local-dev-control-plane node-role.kubernetes.io/control-plane- 2>/dev/null || true
# remova o taint legado (se existir)
kubectl taint nodes local-dev-control-plane node-role.kubernetes.io/master- 2>/dev/null || true


