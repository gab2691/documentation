paths.put("rootProjectPath", rootProjectPath);
paths.put("mainDirectory", mainPath);
paths.put("pomPath", rootProjectPath.resolve("pom.xml"));
paths.put("yamlPath", rootProjectPath.resolve(Paths.get("src", "main", "resources", "application.yml")));

